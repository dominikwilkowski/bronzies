{
	"name": "bronzies",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"start": "concurrently \"yarn start:server\" \"yarn start:app\"",
		"start:dev": "concurrently \"yarn start:server\" \"yarn start:app:dev\"",
		"start:app": "react-scripts start",
		"start:server": "node server/server.js serve",
		"start:server:dev": "node server/server.js serve debug",
		"build": "react-scripts build",
		"test": "CI=true react-scripts test",
		"test:watch": "react-scripts test",
		"test:cover": "CI=true react-scripts test --coverage",
		"eject": "react-scripts eject",
		"deploy": "yarn build && yarn deploy:server && yarn deploy:restart && yarn deploy:app",
		"deploy:server": "rsync --exclude=assets/highscore.json -avzhe ssh --progress ./server/* deploy@bronzies.com:/var/www/html/bronzies/server",
		"deploy:app": "rsync -avzhe ssh --progress ./build/* deploy@bronzies.com:/var/www/html/bronzies/",
		"deploy:restart": "ssh deploy@bronzies.com forever restart /www/bronzies/server/server.js",
		"nuke": "rm -rf build && rm -rf node_modules && rm yarn.lock"
	},
	"dependencies": {
		"@emotion/core": "^10.0.15",
		"@reach/router": "^1.2.1",
		"react": "^16.9.0",
		"react-dom": "^16.9.0",
		"react-scripts": "3.1.0",
		"react-spring": "^8.0.27"
	},
	"devDependencies": {
		"concurrently": "^4.1.1"
	},
	"proxy": "http://localhost:5555",
	"jest": {
		"collectCoverageFrom": [
			"src/**/*.js",
			"server/**/*.js",
			"!<rootDir>/node_modules/",
			"!<rootDir>/server/node_modules/"
		],
		"coverageThreshold": {
			"global": {
				"branches": 0,
				"functions": 0,
				"lines": 0,
				"statements": 0
			}
		}
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"last 2 safari version",
			"not op_mini all"
		],
		"development": [
			"last 2 chrome version",
			"last 2 firefox version",
			"last 2 safari version"
		]
	}
}
